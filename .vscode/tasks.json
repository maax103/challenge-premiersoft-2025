{
  // VS Code tasks to run Laravel commands inside Docker
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Migrate + Seed (Docker)",
      "type": "shell",
      "command": "docker compose exec -T app php artisan migrate --seed",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Artisan Config Clear (Docker)",
      "type": "shell",
      "command": "docker compose exec -T app php artisan config:clear",
      "group": "none",
      "problemMatcher": []
    }
  ]
}
