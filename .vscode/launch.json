    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug on Docker",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www": "${workspaceFolder}/backend"
            },
            "hostname": "0.0.0.0",
            "log": true,
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 512,
                "max_depth": 3
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        }
    ]
}